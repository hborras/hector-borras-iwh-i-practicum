doctype html
html
    head
        title {title}
        link(rel="stylesheet", href="/css/style.css")
    body
        .form-wrapper
            h1 Board Games
            a(href="/update-boardgames") Add New Boardgame
            br
            if boardGames.length > 0
                br
                table(border="1")
                    thead
                        tr
                            th Name
                            th Color
                            th Nickname
                    tbody
                      each boardGame in boardGames
                          tr
                              td
                                  a(href="/update-boardgames?id=" + boardGame.id)
                                      p #{boardGame.properties.name}
                              td= boardGame.properties.type
                              td= boardGame.properties.thematic
            else
                p No records found.